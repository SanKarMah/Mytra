<RelativeLayout
    android:id="@+id/rltv_password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/rltv_phone">
    <ImageView
        android:id="@+id/img_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/lock_outline_white"/>
    <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/img_password"
            android:textColorHint="#fff"
            android.support.design:hintTextAppearance="@style/GreenTextInputLayout"
            android:layout_below="@+id/input_layout_email">

            <EditText
                android:id="@+id/edt_paswrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:textColorHint="#fff"
                android:padding="15dp"
                android:ems="10"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/editext_bottom_line"
                android:textColor="#fff" />

        </android.support.design.widget.TextInputLayout>


</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rltv_cnfrm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rltv_password">
        <ImageView
            android:id="@+id/img_cnfrm_password"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:src="@drawable/lock_outline_white"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_cnfrm_paswrd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:layout_marginBottom="10dp"
            android:textColorHint="#fff"
            android:layout_toRightOf="@+id/img_cnfrm_password"
            android.support.design:hintTextAppearance="@style/GreenTextInputLayout"
            >

            <EditText
                android:id="@+id/edt_cnfrm_paswrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:textColorHint="#fff"
                android:padding="15dp"
                android:ems="10"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/editext_bottom_line"
                android:textColor="#fff" />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

